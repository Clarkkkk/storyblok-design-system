{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "src/*": ["./src/*"],
      "@base/*": ["./src/components/Base/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@constants/*": ["./src/constants/*"],
      "storyblok-design-system/*": ["./storyblok-design-system/*"]
    },
  }
}
