{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json", "src/**/*.js", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "src/*": ["./src/*"],
    },
  }
}
