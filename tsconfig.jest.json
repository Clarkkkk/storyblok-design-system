{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "src/*": ["./src/*"],
    },
    "types": ["node", "jest"],
  }
}